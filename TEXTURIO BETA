<body>
    <h1>TEXTURIO Beta</h1>
    <p>Mine minerals, build, and travel!</p>
    
    <button onclick="mine()">â›ï¸ Mine Minerals</button>
    <button onclick="buildStructure()">ğŸ—ï¸ Build Structure (5s)</button>
    <button onclick="travel()">ğŸš‚ Travel by Train (Real-time)</button>

    <p>Minerals: <span id="minerals">0</span></p>
    <p>Structures Built: <span id="structures">0</span></p>

    <div id="log"></div>

    <script>
        let minerals = 0;
        let structures = 0;

        function logMessage(msg) {
            let log = document.getElementById("log");
            log.innerHTML += `<p>${msg}</p>`;
            log.scrollTop = log.scrollHeight;
        }

        function mine() {
            minerals += Math.floor(Math.random() * 5) + 1;
            document.getElementById("minerals").innerText = minerals;
            logMessage("â›ï¸ Mined minerals!");
        }

        function buildStructure() {
            if (minerals >= 10) {
                minerals -= 10;
                document.getElementById("minerals").innerText = minerals;
                logMessage("ğŸ—ï¸ Building structure... (5s)");

                setTimeout(() => {
                    structures++;
                    document.getElementById("structures").innerText = structures;
                    logMessage("âœ… Structure built!");
                }, 5000);
            } else {
                logMessage("âŒ Not enough minerals!");
            }
        }

        function travel() {
            logMessage("ğŸš‚ Train departing... ETA: 10s");
            setTimeout(() => {
                logMessage("âœ… Arrived at destination!");
            }, 10000);
        }
    </script>
